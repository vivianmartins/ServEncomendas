<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.1">

    <persistence-unit name="default">
        <class>com.example.bd.DAL.Clientes</class>
        <class>com.example.bd.DAL.Pratos</class>
        <class>com.example.bd.DAL.Codpostais</class>
        <class>com.example.bd.DAL.Encomendaestados</class>
        <class>com.example.bd.DAL.EncomendaestadosPK</class>
        <class>com.example.bd.DAL.Encomendas</class>
        <class>com.example.bd.DAL.Estafeta</class>
        <class>com.example.bd.DAL.PratosEncomendados</class>
        <class>com.example.bd.DAL.PratosEncomendadosPK</class>
        <class>com.example.bd.DAL.Tipopagamentos</class>
        <class>com.example.bd.DAL.Users</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle12cDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
            <property name="javax.persistence.jdbc.user" value="PROJETOBD"/>
            <property name="javax.persistence.jdbc.password" value="PROJETOBD"/>

        </properties>
    </persistence-unit>
</persistence>